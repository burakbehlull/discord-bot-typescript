{
	"ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "compilerOptions": {
		"module": "commonjs",
		"removeComments": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2022",
		"outDir": "./dist",
		"baseUrl": "./",
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "sourceMap": true,
		"incremental": true,
		"strict": true,
		"typeRoots": ["node_modules/@types", "src/@types"],
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@/core": ["./src/base/Core.ts"],
		},
	}
}